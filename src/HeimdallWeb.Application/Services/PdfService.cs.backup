using HeimdallWeb.Application.Interfaces;
using HeimdallWeb.Domain.Entities;
using QuestPDF.Fluent;
using QuestPDF.Helpers;
using QuestPDF.Infrastructure;

namespace HeimdallWeb.Application.Services;

/// <summary>
/// Service for generating PDF reports using QuestPDF.
/// Creates professional security scan reports with findings, technologies, and AI summaries.
///
/// TODO: This is a simplified version. Full implementation needs to be migrated from
/// HeimdallWebOld/Services/PdfService.cs with proper entity mapping.
///
/// Source: HeimdallWebOld/Services/PdfService.cs
/// </summary>
public class PdfService : IPdfService
{
    public PdfService()
    {
        QuestPDF.Settings.License = LicenseType.Community;
    }

    /// <summary>
    /// Generates a PDF report for multiple scan histories.
    /// </summary>
    public byte[] GenerateHistoryPdf(IEnumerable<ScanHistory> histories, string userName)
    {
        var historiesList = histories.ToList();

        var document = Document.Create(container =>
        {
            container.Page(page =>
            {
                page.Size(PageSizes.A4);
                page.Margin(40);
                page.PageColor("#FFFFFF");
                page.DefaultTextStyle(x => x.FontSize(10).FontFamily("Arial"));

                page.Header().Element(ComposeHeader);
                page.Content().Element(content => ComposeMultipleHistoriesContent(content, historiesList));
                page.Footer().Element(footer => ComposeFooter(footer, userName));
            });
        });

        return document.GeneratePdf();
    }

    /// <summary>
    /// Generates a detailed PDF report for a single scan history.
    /// </summary>
    public byte[] GenerateSingleHistoryPdf(ScanHistory history, string userName)
    {
        var isFirstPage = true;

        var document = Document.Create(container =>
        {
            container.Page(page =>
            {
                page.Size(PageSizes.A4);
                page.Margin(40);
                page.PageColor("#FFFFFF");
                page.DefaultTextStyle(x => x.FontSize(10).FontFamily("Arial"));

                page.Header().Element(c =>
                {
                    if (isFirstPage)
                    {
                        ComposeSingleHeader(c, history);
                        isFirstPage = false;
                    }
                    else
                    {
                        ComposeSimpleHeader(c, history);
                    }
                });
                
                page.Content().Element(content => ComposeSingleContent(content, history));
                page.Footer().Element(footer => ComposeFooter(footer, userName));
            });
        });

        return document.GeneratePdf();
    }

    private void ComposeHeader(IContainer container)
    {
        container.Column(column =>
        {
            column.Item().AlignCenter().Text("Relatório de Histórico - Heimdall")
                .FontSize(20)
                .SemiBold()
                .FontColor("#1565C0");

            column.Item().PaddingTop(5).LineHorizontal(2).LineColor("#1565C0");

            column.Item().PaddingTop(10).Text($"Gerado em: {DateTime.Now:dd/MM/yyyy HH:mm:ss}")
                .FontSize(10)
                .FontColor("#616161");
        });
    }

    private void ComposeMultipleHistoriesContent(IContainer container, List<ScanHistory> histories)
    {
        container.PaddingVertical(20).Column(column =>
        {
            column.Item().Text("Resumo Executivo")
                .FontSize(14)
                .SemiBold()
                .FontColor("#1565C0");

            column.Item().PaddingTop(5).LineHorizontal(1).LineColor("#9E9E9E");

            column.Item().PaddingTop(10).Text($"Total de registros: {histories.Count}")
                .FontSize(11);

            var completedCount = histories.Count(h => h.HasCompleted);
            column.Item().PaddingTop(5).Text($"Scans completados: {completedCount}")
                .FontSize(11);

            // Table of histories
            column.Item().PaddingTop(20).Text("Detalhamento dos Registros")
                .FontSize(14)
                .SemiBold()
                .FontColor("#1565C0");

            foreach (var history in histories)
            {
                column.Item().PaddingTop(15).Background("#F5F5F5").Padding(10).Column(col =>
                {
                    col.Item().Text($"Alvo: {history.Target.Value}")
                        .FontSize(11)
                        .SemiBold();

                    col.Item().PaddingTop(3).Text($"Data: {history.CreatedDate:dd/MM/yyyy HH:mm}")
                        .FontSize(9);

                    if (history.Duration != null)
                    {
                        TimeSpan duration = history.Duration; // Implicit conversion
                        col.Item().Text($"Duração: {duration:mm\\:ss}")
                            .FontSize(9);
                    }

                    if (!string.IsNullOrWhiteSpace(history.Summary))
                    {
                        col.Item().PaddingTop(5).Text(TruncateText(history.Summary, 200))
                            .FontSize(8)
                            .FontColor("#757575");
                    }
                });
            }
        });
    }

    private void ComposeSingleHeader(IContainer container, ScanHistory history)
    {
        container.Column(column =>
        {
            column.Item().AlignCenter().Text("Relatório Detalhado de Scan de Segurança")
                .FontSize(18)
                .SemiBold()
                .FontColor("#1565C0");

            column.Item().PaddingTop(3).AlignCenter().Text("Heimdall Web Security Scanner")
                .FontSize(11)
                .FontColor("#757575");

            column.Item().PaddingTop(8).LineHorizontal(2).LineColor("#1565C0");

            column.Item().PaddingTop(10).Background("#F5F5F5").Padding(10).Column(col =>
            {
                col.Item().Text("Alvo Escaneado:")
                    .FontSize(9)
                    .FontColor("#616161");

                col.Item().PaddingTop(2).Text(history.Target.Value)
                    .FontSize(13)
                    .SemiBold()
                    .FontColor("#212121");

                col.Item().PaddingTop(8).Row(row =>
                {
                    row.RelativeItem().Column(c =>
                    {
                        c.Item().Text("Data do Scan:")
                            .FontSize(8)
                            .FontColor("#616161");
                        c.Item().Text($"{history.CreatedDate:dd/MM/yyyy HH:mm:ss}")
                            .FontSize(9)
                            .SemiBold()
                            .FontColor("#424242");
                    });

                    row.RelativeItem().Column(c =>
                    {
                        c.Item().Text("Status:")
                            .FontSize(8)
                            .FontColor("#616161");
                        c.Item().Text(history.HasCompleted ? "Completo" : "Em andamento")
                            .FontSize(9)
                            .SemiBold()
                            .FontColor(history.HasCompleted ? "#2E7D32" : "#EF6C00");
                    });
                });
            });
        });
    }

    private void ComposeSimpleHeader(IContainer container, ScanHistory history)
    {
        container.Column(column =>
        {
            column.Item().AlignCenter().Text("Relatório Detalhado de Scan de Segurança")
                .FontSize(18)
                .SemiBold()
                .FontColor("#1565C0");

            column.Item().PaddingTop(3).AlignCenter().Text("Heimdall Web Security Scanner")
                .FontSize(11)
                .FontColor("#757575");

            column.Item().PaddingTop(8).LineHorizontal(2).LineColor("#1565C0");

            column.Item().PaddingTop(10).Row(row =>
            {
                row.RelativeItem().Text(text =>
                {
                    text.Span("Alvo: ")
                        .FontSize(9)
                        .FontColor("#616161");
                    text.Span(history.Target.Value)
                        .FontSize(10)
                        .SemiBold()
                        .FontColor("#212121");
                });

                row.RelativeItem().AlignRight().Text(text =>
                {
                    text.Span("Data: ")
                        .FontSize(8)
                        .FontColor("#616161");
                    text.Span($"{history.CreatedDate:dd/MM/yyyy HH:mm:ss}")
                        .FontSize(9)
                        .FontColor("#424242");
                });

                row.RelativeItem().AlignRight().Text(text =>
                {
                    text.Span("Status: ")
                        .FontSize(8)
                        .FontColor("#616161");
                    text.Span(history.HasCompleted ? "Completo" : "Em andamento")
                        .FontSize(9)
                        .SemiBold()
                        .FontColor(history.HasCompleted ? "#2E7D32" : "#EF6C00");
                });
            });
        });
    }

    private void ComposeSingleContent(IContainer container, ScanHistory history)
    {
        container.PaddingVertical(15).Column(column =>
        {
            // Visão Geral Section
            column.Item().Text("Visão Geral do Scan")
                .FontSize(14)
                .SemiBold()
                .FontColor("#1565C0");

            column.Item().PaddingTop(5).LineHorizontal(1).LineColor("#9E9E9E");

            // Scan Statistics
            column.Item().PaddingTop(10).Background("#E3F2FD").Padding(15).Column(col =>
            {
                col.Item().Row(row =>
                {
                    row.RelativeItem().Column(c =>
                    {
                        c.Item().Text("Duracao do Scan:")
                            .FontSize(9)
                            .FontColor("#616161");

                        if (history.Duration != null)
                        {
                            TimeSpan duration = history.Duration;
                            c.Item().PaddingTop(2).Text($"{duration.TotalSeconds:F2} segundos")
                                .FontSize(11)
                                .SemiBold()
                                .FontColor("#1976D2");
                        }
                        else
                        {
                            c.Item().PaddingTop(2).Text("N/A")
                                .FontSize(11)
                                .FontColor("#9E9E9E");
                        }
                    });

                    row.RelativeItem().Column(c =>
                    {
                        c.Item().Text("Achados Encontrados:")
                            .FontSize(9)
                            .FontColor("#616161");
                        c.Item().PaddingTop(2).Text($"{history.Findings?.Count ?? 0}")
                            .FontSize(11)
                            .SemiBold()
                            .FontColor(history.Findings?.Any() == true ? "#D32F2F" : "#4CAF50");
                    });

                    row.RelativeItem().Column(c =>
                    {
                        c.Item().Text("Tecnologias Detectadas:")
                            .FontSize(9)
                            .FontColor("#616161");
                        c.Item().PaddingTop(2).Text($"{history.Technologies?.Count ?? 0}")
                            .FontSize(11)
                            .SemiBold()
                            .FontColor("#1976D2");
                    });
                });
            });

            // AI Summary Section
            if (!string.IsNullOrWhiteSpace(history.Summary))
            {
                column.Item().PaddingTop(20).Text("Resumo de IA")
                    .FontSize(14)
                    .SemiBold()
                    .FontColor("#1565C0");

                column.Item().PaddingTop(5).LineHorizontal(1).LineColor("#9E9E9E");

                column.Item().PaddingTop(10).Background("#F3E5F5").Padding(15).Text(history.Summary)
                    .FontSize(10)
                    .FontColor("#424242")
                    .LineHeight(1.6f);
            }

            // Findings Section
            if (history.Findings?.Any() == true)
            {
                column.Item().PaddingTop(20).Text("Achados de Seguranca")
                    .FontSize(14)
                    .SemiBold()
                    .FontColor("#1565C0");

                column.Item().PaddingTop(5).LineHorizontal(1).LineColor("#9E9E9E");

                foreach (var finding in history.Findings.OrderByDescending(f => f.Severity))
                {
                    var severityColor = finding.Severity switch
                    {
                        Domain.Enums.SeverityLevel.Critical => "#B71C1C",
                        Domain.Enums.SeverityLevel.High => "#D32F2F",
                        Domain.Enums.SeverityLevel.Medium => "#EF6C00",
                        Domain.Enums.SeverityLevel.Low => "#FBC02D",
                        _ => "#9E9E9E"
                    };

                    var severityBgColor = finding.Severity switch
                    {
                        Domain.Enums.SeverityLevel.Critical => "#FFEBEE",
                        Domain.Enums.SeverityLevel.High => "#FFEBEE",
                        Domain.Enums.SeverityLevel.Medium => "#FFF3E0",
                        Domain.Enums.SeverityLevel.Low => "#FFFDE7",
                        _ => "#F5F5F5"
                    };

                    column.Item().PaddingTop(10).Background(severityBgColor).Padding(12).Column(findingCol =>
                    {
                        // Title row with severity badge
                        findingCol.Item().Row(row =>
                        {
                            row.RelativeItem().AlignMiddle().Text(finding.Type)
                                .FontSize(11)
                                .SemiBold()
                                .FontColor("#212121");

                            row.AutoItem().AlignMiddle()
                                .Background(severityColor)
                                .PaddingHorizontal(8)
                                .PaddingVertical(3)
                                .Text(finding.Severity.ToString())
                                .FontSize(8)
                                .FontColor("#FFFFFF")
                                .SemiBold();
                        });

                        if (!string.IsNullOrWhiteSpace(finding.Description))
                        {
                            findingCol.Item().PaddingTop(6).Text(text =>
                            {
                                text.Span("Descricao: ")
                                    .FontSize(9)
                                    .SemiBold()
                                    .FontColor("#424242");
                                text.Span(finding.Description)
                                    .FontSize(9)
                                    .FontColor("#424242");
                            });
                        }

                        if (!string.IsNullOrWhiteSpace(finding.Evidence))
                        {
                            findingCol.Item().PaddingTop(4).Text(text =>
                            {
                                text.Span("Evidencia: ")
                                    .FontSize(8)
                                    .SemiBold()
                                    .FontColor("#616161");
                                text.Span(finding.Evidence)
                                    .FontSize(8)
                                    .FontColor("#616161")
                                    .Italic();
                            });
                        }

                        if (!string.IsNullOrWhiteSpace(finding.Recommendation))
                        {
                            var borderColor = finding.Severity switch
                            {
                                Domain.Enums.SeverityLevel.Critical => "#B71C1C",
                                Domain.Enums.SeverityLevel.High => "#D32F2F",
                                Domain.Enums.SeverityLevel.Medium => "#EF6C00",
                                Domain.Enums.SeverityLevel.Low => "#F9A825",
                                _ => "#9E9E9E"
                            };

                            findingCol.Item().PaddingTop(6).Border(1).BorderColor(borderColor).Padding(8).Column(recCol =>
                            {
                                recCol.Item().Text("Recomendacao:")
                                    .FontSize(8)
                                    .SemiBold()
                                    .FontColor("#616161");

                                recCol.Item().PaddingTop(2).Text(finding.Recommendation)
                                    .FontSize(8)
                                    .FontColor("#424242")
                                    .LineHeight(1.4f);
                            });
                        }
                    });
                }
            }

            // Technologies Section
            if (history.Technologies?.Any() == true)
            {
                column.Item().PaddingTop(20).Text("Tecnologias Detectadas")
                    .FontSize(14)
                    .SemiBold()
                    .FontColor("#1565C0");

                column.Item().PaddingTop(5).LineHorizontal(1).LineColor("#9E9E9E");

                column.Item().PaddingTop(10).Background("#E8EAF6").Padding(12).Column(techCol =>
                {
                    foreach (var tech in history.Technologies)
                    {
                        techCol.Item().PaddingVertical(4).Row(row =>
                        {
                            row.AutoItem().PaddingRight(6).AlignMiddle().Text("-")
                                .FontSize(10)
                                .SemiBold()
                                .FontColor("#3F51B5");

                            row.RelativeItem().AlignMiddle().Text(text =>
                            {
                                text.Span(tech.Name)
                                    .FontSize(10)
                                    .SemiBold()
                                    .FontColor("#212121");

                                if (!string.IsNullOrWhiteSpace(tech.Version))
                                {
                                    text.Span($" v{tech.Version}")
                                        .FontSize(9)
                                        .FontColor("#616161");
                                }

                                if (!string.IsNullOrWhiteSpace(tech.Category))
                                {
                                    text.Span($" ({tech.Category})")
                                        .FontSize(8)
                                        .FontColor("#9E9E9E");
                                }
                            });
                        });
                    }
                });
            }

            // IA Summary (Detailed) if available
            if (history.IASummaries?.Any() == true)
            {
                var iaSummary = history.IASummaries.First();

                column.Item().PaddingTop(20).Text("Analise de IA Detalhada")
                    .FontSize(14)
                    .SemiBold()
                    .FontColor("#1565C0");

                column.Item().PaddingTop(5).LineHorizontal(1).LineColor("#9E9E9E");

                column.Item().PaddingTop(10).Background("#FCE4EC").Padding(15).Column(iaCol =>
                {
                    if (!string.IsNullOrWhiteSpace(iaSummary.MainCategory))
                    {
                        iaCol.Item().Text(text =>
                        {
                            text.Span("Categoria Principal: ")
                                .FontSize(10)
                                .SemiBold()
                                .FontColor("#616161");
                            text.Span(iaSummary.MainCategory)
                                .FontSize(10)
                                .SemiBold()
                                .FontColor("#212121");
                        });
                    }

                    if (!string.IsNullOrWhiteSpace(iaSummary.OverallRisk))
                    {
                        var riskColor = iaSummary.OverallRisk.ToLower() switch
                        {
                            "critical" or "alto" or "high" => "#D32F2F",
                            "medium" or "medio" => "#EF6C00",
                            "low" or "baixo" => "#4CAF50",
                            _ => "#757575"
                        };

                        iaCol.Item().PaddingTop(8).Row(row =>
                        {
                            row.AutoItem().AlignMiddle().PaddingRight(8).Text("Risco Geral:")
                                .FontSize(10)
                                .SemiBold()
                                .FontColor("#616161");

                            row.AutoItem().AlignMiddle()
                                .Background(riskColor)
                                .PaddingHorizontal(10)
                                .PaddingVertical(4)
                                .Text(iaSummary.OverallRisk ?? "N/A")
                                .FontSize(9)
                                .FontColor("#FFFFFF")
                                .SemiBold();
                        });
                    }

                    if (!string.IsNullOrWhiteSpace(iaSummary.SummaryText))
                    {
                        iaCol.Item().PaddingTop(10).Text(iaSummary.SummaryText)
                            .FontSize(9)
                            .FontColor("#424242")
                            .LineHeight(1.5f);
                    }
                });
            }
        });
    }

    private void ComposeFooter(IContainer container, string userName)
    {
        container.Column(column =>
        {
            column.Item().LineHorizontal(1).LineColor("#9E9E9E");

            column.Item().PaddingTop(5).Row(row =>
            {
                row.RelativeItem().AlignLeft().Text($"Gerado por: {userName}")
                    .FontSize(8)
                    .FontColor("#616161");

                row.RelativeItem().AlignRight().Text(text =>
                {
                    text.Span("Página ")
                        .FontSize(8)
                        .FontColor("#616161");

                    text.CurrentPageNumber()
                        .FontSize(8)
                        .FontColor("#616161");

                    text.Span(" de ")
                        .FontSize(8)
                        .FontColor("#616161");

                    text.TotalPages()
                        .FontSize(8)
                        .FontColor("#616161");
                });
            });
        });
    }

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text))
            return string.Empty;

        return text.Length <= maxLength ? text : text[..maxLength] + "...";
    }
}
