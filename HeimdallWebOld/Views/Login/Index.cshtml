@model HeimdallWeb.DTO.LoginDTO

@{
    ViewData["Title"] = "Login";
}

@* TempData para toasts - elementos ocultos processados pelo JavaScript *@
@if (TempData["OkMsg"] != null)
{
    <div class="tempdata-container" data-tempdata-ok="@TempData["OkMsg"]"></div>
}
@if (TempData["ErrorMsg"] != null)
{
    <div class="tempdata-container" data-tempdata-error="@TempData["ErrorMsg"]"></div>
}
@* TempData handled globally in _Layout.cshtml *@


<div class="container menu d-flex justify-content-center align-items-center" data-bs-theme="dark">
    <div class="row align-items-center">
        <div class="col-6">
            <form class="login mt-5" asp-action="Enter" asp-controller="Login" method="post">
                <div class="justify-content-center align-items-center">
                    <div class="card shadow-lg p-4 rounded-4" style="max-width: 540px; width: 100vh;">
                        <div class="text-center mb-4">
                            <h2 class="mt-2 acme">Faça Login</h2>
                        </div>
                        <div class="mb-3">
                            <label for="emailOrLogin" class="form-label roboto">
                                <i class="fa-solid fa-user"></i> Email ou Usuário
                            </label>
                            <input type="text" class="form-control" asp-for="emailOrLogin" id="emailOrLogin" name="emailOrLogin" placeholder="Digite seu email ou nome de usuário" required>
                            @Html.ValidationMessageFor(x => x.emailOrLogin)
                        </div>
                        <div class="mb-5">
                            <label for="password" class="form-label roboto">
                                <i class="fa-solid fa-lock"></i> Senha
                            </label>
                            <input type="password" class="form-control" asp-for="password" id="password" name="password" placeholder="Digite sua senha" required>
                            @Html.ValidationMessageFor(x => x.password)
                        </div>
                        <div class="d-grid mb-3">
                            <button class="btn btn-primary roboto" type="submit">
                                Entrar
                            </button>
                        </div>
                        <div class="text-center roboto-min">
                            <small class="roboto">Não tem uma conta? <a asp-area="" asp-controller="User" asp-action="Register" class="roboto">Cadastre-se</a></small>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>