<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

@model HeimdallWeb.DTO.LoginDTO
@{
    ViewData["Title"] = "Login";
}

@if (TempData["OkMsg"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["OkMsg"]
    </div>
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["ErrorMsg"]
    </div>
}

<form asp-action="Enter" asp-controller="Login" method="post">
    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
            <div class="text-center mb-4">
                <h2 class="mt-2 acme">Faça Login</h2>
            </div>

            <div class="mb-3">
            <label for="emailOrLogin" class="form-label roboto">
                <i class="fa-solid fa-user"></i> Email ou Usuário
            </label>
            <input type="text" class="form-control" asp-for="emailOrLogin" id="emailOrLogin" name="emailOrLogin" placeholder="Digite seu email ou nome de usuário" required>
            @Html.ValidationMessageFor(x => x.emailOrLogin)
            </div>

            <div class="mb-3">
            <label for="password" class="form-label roboto">
                <i class="fa-solid fa-lock"></i> Senha
            </label>
            <input type="password" class="form-control" asp-for="password" id="password" name="password" placeholder="Digite sua senha" required>
            @Html.ValidationMessageFor(x => x.password)
            </div>

            <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" value="on">
            <label class="form-check-label roboto" for="rememberMe">
                Lembre de mim
            </label>
            </div>

            <div class="d-grid mb-3">
            <button class="btn btn-warning roboto" type="submit">
                Entrar
            </button>
            </div>

            <div class="text-center roboto">
                <small class="roboto">Não tem uma conta? <a asp-area="" asp-controller="User" asp-action="Register" class="roboto">Cadastre-se</a></small>
            </div>
        </div>
    </div>
</form>