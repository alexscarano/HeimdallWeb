@model HeimdallWeb.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<head>
    @* <link rel="stylesheet" href="~/css/dashboard-dark.css" asp-append-version="true" /> *@
    <!-- AdminLTE CSS via CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">   
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>

<div class="container-lg mb-4">
    <div class="d-flex justify-content-between align-items-center py-3 bg-dark rounded-3 text-white history-header px-3">
        <div class="d-flex align-items-center">
            <h4 class="m-0"><i class="fas fa-tachometer-alt"></i> Dashboard Administrativo</h4>
        </div>
        <div class="d-flex align-items-stretch gap-2">
            <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Admin" asp-action="GerenciarUsuarios">Gerenciar Usuários</a>
            <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="History" asp-action="Index">Histórico</a>
        </div>
    </div>
</div>

<!-- Cards de Estatísticas Principais -->
<div class="container-lg">
    <div class="row">
        <!-- Card: Total de Usuários -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@Model.UserStats.total_users</h3>
                    <p>Total de Usuários</p>
                </div>
                <div class="icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="small-box-footer">
                    <span class="badge bg-success">@Model.UserStats.active_users Ativos</span>
                    <span class="badge bg-danger">@Model.UserStats.blocked_users Bloqueados</span>
                </div>
            </div>
        </div>

        <!-- Card: Total de Scans -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.ScanStats.total_scans</h3>
                    <p>Total de Scans</p>
                </div>
                <div class="icon">
                    <i class="fas fa-search"></i>
                </div>
                <div class="small-box-footer">
                    <span class="badge bg-light text-dark">@Model.ScanStats.scans_last_24h Últimas 24h</span>
                </div>
            </div>
        </div>

        <!-- Card: Taxa de Sucesso -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
            <div class="small-box bg-warning">
                <div class="inner" style="color: white;">
                    <h3 style="color: white;">@Model.ScanStats.success_rate%</h3>
                    <p style="color: white;">Taxa de Sucesso</p>
                </div>
                <div class="icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="small-box-footer" style="color: white;">
                    @{
                        var avg = Model?.ScanStats?.avg_scan_time_s ?? 0.0;
                        // Always show minutes:seconds with up to 6 fractional digits (microsecond precision)
                        var minutes = (int)(avg / 60);
                        var seconds = avg - minutes * 60; // seconds with fractional part
                                                          // Format seconds with at most 6 decimals, keep at least two integer digits
                        var secondsStr = seconds.ToString("00");
                        var avgDisplay = $"{minutes}:{secondsStr}";
                    }
                    Tempo médio: @(avgDisplay)s
                </div>
            </div>
        </div>

        <!-- Card: Total de Logs -->
        <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@Model.LogsOverview.total_logs</h3>
                    <p>Total de Logs</p>
                </div>
                <div class="icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div class="small-box-footer">
                    <span class="badge bg-danger">@Model.LogsOverview.logs_errors_last_24h Erros</span>
                    <span class="badge bg-warning">@Model.LogsOverview.logs_warn_last_24h Avisos</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards Secundários -->
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="info-box bg-gradient-primary">
                <span class="info-box-icon"><i class="fas fa-user-plus"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Novos Usuários (7 dias)</span>
                    <span class="info-box-number">@Model.UserStats.new_users_last_7_days</span>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="info-box bg-gradient-success">
                <span class="info-box-icon"><i class="fas fa-calendar-alt"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Novos Usuários (30 dias)</span>
                    <span class="info-box-number">@Model.UserStats.new_users_last_30_days</span>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="info-box bg-gradient-info">
                <span class="info-box-icon"><i class="fas fa-clock"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Logs Hoje</span>
                    <span class="info-box-number">@Model.LogsOverview.logs_today</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row">
        <!-- Gráfico: Tendência de Scans -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <h5 class="card-title m-0"><i class="fas fa-chart-line"></i> Tendência de Scans (30 dias)</h5>
                </div>
                <div class="card-body">
                    <canvas id="scanTrendChart" style="height: 250px;"></canvas>
                </div>
            </div>
        </div>

        <!-- Gráfico: Taxa de Sucesso/Falha -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <h5 class="card-title m-0"><i class="fas fa-chart-pie"></i> Taxa de Sucesso/Falha</h5>
                </div>
                <div class="card-body">
                    <canvas id="successRateChart" style="height: 250px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Gráfico: Novos Usuários -->
        <div class="col-lg-12 mb-4">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <h5 class="card-title m-0"><i class="fas fa-user-chart"></i> Novos Usuários (30 dias)</h5>
                </div>
                <div class="card-body">
                    <canvas id="userRegistrationChart" style="height: 200px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Atividade Recente -->
    <div class="row">
        <div class="col-12 mb-4">
            <!-- Filtros de Log -->
            <form method="get" class="mb-3 p-3 bg-dark rounded-3 shadow-sm">
                <div class="row g-3">
                    <!-- Filtro Nível -->
                    <div class="col-md-3">
                        <label for="logLevel" class="form-label text-light">Nível</label>
                        <select name="logLevel" id="logLevel" class="form-select bg-transparent text-light border-secondary">
                            <option value="">Todos</option>
                            @{
                                var __logLevelSel = ViewData["LogLevel"]?.ToString();
                            }
                            @if (__logLevelSel == "INFO")
                            {
                                <option value="INFO" selected>INFO</option>
                            }
                            else
                            {
                                <option value="INFO">INFO</option>
                            }
                            @if (__logLevelSel == "WARNING")
                            {
                                <option value="WARNING" selected>WARNING</option>
                            }
                            else
                            {
                                <option value="WARNING">WARNING</option>
                            }
                            @if (__logLevelSel == "ERROR")
                            {
                                <option value="ERROR" selected>ERROR</option>
                            }
                            else
                            {
                                <option value="ERROR">ERROR</option>
                            }
                            @if (__logLevelSel == "CRITICAL")
                            {
                                <option value="CRITICAL" selected>CRITICAL</option>
                            }
                            else
                            {
                                <option value="CRITICAL">CRITICAL</option>
                            }
                        </select>
                    </div>

                    <!-- Data Início -->
                    <div class="col-md-3">
                        <label for="logStartDate" class="form-label text-light">Data Início</label>
                        <input type="date" name="logStartDate" id="logStartDate" class="form-control bg-transparent text-light border-secondary" value="@ViewData["LogStartDate"]" />
                    </div>

                    <!-- Data Fim -->
                    <div class="col-md-3">
                        <label for="logEndDate" class="form-label text-light">Data Fim</label>
                        <input type="date" name="logEndDate" id="logEndDate" class="form-control bg-transparent text-light border-secondary" value="@ViewData["LogEndDate"]" />
                    </div>

                    <!-- Botões -->
                    <div class="col-md-3 d-flex align-items-end gap-2">
                        <button type="submit" class="btn btn-outline-primary" title="Filtrar">
                            <i class="fas fa-search"></i> Filtrar
                        </button>
                        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary" title="Limpar Filtros">
                            <i class="fas fa-times"></i> Limpar
                        </a>
                    </div>
                </div>
            </form>

            <div class="card bg-dark text-white">
                <div class="card-header">
                    <h5 class="card-title m-0"><i class="fas fa-history"></i> Atividade Recente</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Horário</th>
                                    <th>Usuário</th>
                                    <th>Nível</th>
                                    <th>Mensagem</th>
                                    <th>Origem</th>
                                    <th>IP</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentActivity != null && Model.RecentActivity.Items != null && Model.RecentActivity.Items.Any())
                                {
                                    foreach (var activity in Model.RecentActivity.Items)
                                    {
                                        var levelClass = activity.level switch
                                        {
                                            "ERROR" => "text-danger",
                                            "CRITICAL" => "text-danger fw-bold",
                                            "WARNING" => "text-warning",
                                            _ => "text-info"
                                        };

                                        var levelIcon = activity.level switch
                                        {
                                            "ERROR" => "fa-exclamation-circle",
                                            "CRITICAL" => "fa-times-circle",
                                            "WARNING" => "fa-exclamation-triangle",
                                            _ => "fa-info-circle"
                                        };

                                        <tr>
                                            <td class="text-nowrap">@activity.timestamp.ToString("dd/MM/yy HH:mm")</td>
                                            <td>@(activity.username ?? "-")</td>
                                            <td class="@levelClass">
                                                <i class="fas @levelIcon"></i> @activity.level
                                            </td>
                                            <td>@activity.message</td>
                                            <td><span class="badge bg-secondary">@activity.source</span></td>
                                            <td class="text-muted small">@(activity.remote_ip ?? "-")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">Nenhuma atividade recente</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginação dos Logs -->
                    @if (Model.RecentActivity != null && Model.RecentActivity.TotalPages > 1)
                    {
                        <div class="card-footer bg-dark border-secondary">
                            <nav>
                                <ul class="pagination pagination-sm mb-0 justify-content-center">
                                    @if (Model.RecentActivity.HasPrevious)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?logPage=@(Model.RecentActivity.Page - 1)&logPageSize=@Model.RecentActivity.PageSize&logLevel=@ViewData["LogLevel"]&logStartDate=@ViewData["LogStartDate"]&logEndDate=@ViewData["LogEndDate"]">Anterior</a>
                                        </li>
                                    }

                                    @{
                                        int maxPagesToShow = 5;
                                        int startPage = Math.Max(1, Model.RecentActivity.Page - maxPagesToShow / 2);
                                        int endPage = Math.Min(Model.RecentActivity.TotalPages, startPage + maxPagesToShow - 1);

                                        if (endPage - startPage < maxPagesToShow - 1)
                                        {
                                            startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                                        }
                                    }

                                    @if (startPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?logPage=1&logPageSize=@Model.RecentActivity.PageSize&logLevel=@ViewData["LogLevel"]&logStartDate=@ViewData["LogStartDate"]&logEndDate=@ViewData["LogEndDate"]">1</a>
                                        </li>
                                        @if (startPage > 2)
                                        {
                                            <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
                                        }
                                    }

                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.RecentActivity.Page ? "active" : "")">
                                            <a class="page-link" href="?logPage=@i&logPageSize=@Model.RecentActivity.PageSize&logLevel=@ViewData["LogLevel"]&logStartDate=@ViewData["LogStartDate"]&logEndDate=@ViewData["LogEndDate"]">@i</a>
                                        </li>
                                    }

                                    @if (endPage < Model.RecentActivity.TotalPages)
                                    {
                                        @if (endPage < Model.RecentActivity.TotalPages - 1)
                                        {
                                            <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link" href="?logPage=@Model.RecentActivity.TotalPages&logPageSize=@Model.RecentActivity.PageSize&logLevel=@ViewData["LogLevel"]&logStartDate=@ViewData["LogStartDate"]&logEndDate=@ViewData["LogEndDate"]">@Model.RecentActivity.TotalPages</a>
                                        </li>
                                    }

                                    @if (Model.RecentActivity.HasNext)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="?logPage=@(Model.RecentActivity.Page + 1)&logPageSize=@Model.RecentActivity.PageSize&logLevel=@ViewData["LogLevel"]&logStartDate=@ViewData["LogStartDate"]&logEndDate=@ViewData["LogEndDate"]">Próxima</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                            <div class="text-center text-muted small mt-2">
                                Mostrando @(Model.RecentActivity?.Items?.Count ?? 0) de @(Model.RecentActivity?.TotalCount ?? 0) registros
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dados para os gráficos
        const scanTrendData = @Html.Raw(Json.Serialize(Model.ScanTrend.Select(x => new { date = x.scan_date.ToString("dd/MM"), count = x.scan_count, success = x.successful_scans, failed = x.failed_scans }).Reverse()));
        const userRegTrendData = @Html.Raw(Json.Serialize(Model.UserRegistrationTrend.Select(x => new { date = x.registration_date.ToString("dd/MM"), count = x.new_users }).Reverse()));
        const successRate = @((Model?.ScanStats?.success_rate ?? 0m).ToString(System.Globalization.CultureInfo.InvariantCulture));
        const failRate = @((Model?.ScanStats?.fail_rate ?? 0m).ToString(System.Globalization.CultureInfo.InvariantCulture));

        // Configuração comum para tema escuro
        Chart.defaults.color = '#ffffff';
        Chart.defaults.borderColor = '#4a4a4a';

        // Gráfico: Tendência de Scans
        const scanTrendCtx = document.getElementById('scanTrendChart').getContext('2d');
        new Chart(scanTrendCtx, {
            type: 'line',
            data: {
                labels: scanTrendData.map(d => d.date),
                datasets: [
                    {
                        label: 'Total de Scans',
                        data: scanTrendData.map(d => d.count),
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        tension: 0.3
                    },
                    {
                        label: 'Sucesso',
                        data: scanTrendData.map(d => d.success),
                        borderColor: 'rgb(40, 167, 69)',
                        backgroundColor: 'rgba(40, 167, 69, 0.2)',
                        tension: 0.3
                    },
                    {
                        label: 'Falha',
                        data: scanTrendData.map(d => d.failed),
                        borderColor: 'rgb(220, 53, 69)',
                        backgroundColor: 'rgba(220, 53, 69, 0.2)',
                        tension: 0.3
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: true, position: 'bottom' }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Gráfico: Taxa de Sucesso/Falha
        const successRateCtx = document.getElementById('successRateChart').getContext('2d');
        new Chart(successRateCtx, {
            type: 'doughnut',
            data: {
                labels: ['Sucesso', 'Falha'],
                datasets: [{
                    data: [successRate, failRate],
                    backgroundColor: [
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(220, 53, 69, 0.8)'
                    ],
                    borderColor: [
                        'rgb(40, 167, 69)',
                        'rgb(220, 53, 69)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: true, position: 'bottom' }
                }
            }
        });

        // Gráfico: Novos Usuários
        const userRegCtx = document.getElementById('userRegistrationChart').getContext('2d');
        new Chart(userRegCtx, {
            type: 'bar',
            data: {
                labels: userRegTrendData.map(d => d.date),
                datasets: [{
                    label: 'Novos Usuários',
                    data: userRegTrendData.map(d => d.count),
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgb(54, 162, 235)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });
    </script>
}