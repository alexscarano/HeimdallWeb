@model HeimdallWeb.DTO.UpdateUserDTO
@{
    ViewData["Title"] = "Alterar Usuário";
}

<head>
    <link rel="stylesheet" href="~/css/history-dark.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/edit-dark.css" asp-append-version="true" />
</head>

<div class="container mb-4">
    <div class="d-flex justify-content-between align-items-center py-3 bg-dark rounded-3 text-white history-header">
        <div class="d-flex align-items-center gap-3">
            <h4 class="m-0">Alterar dados da conta</h4>

        </div>
        <div class="d-flex align-items-center gap-2">
            <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="History" asp-action="Index">Histórico</a>
            <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="User" asp-action="Delete">Excluir Usuário</a>
            @if (User.IsInRole("2"))
            {
                <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Admin" asp-action="DashboardAdmin">Painel de Admin</a>
            }
        </div>
    </div>
</div>

@if (TempData["OkMsg"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["OkMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-3">
    <div class="d-flex justify-content-center">
        <div class="page-panel edit-panel" style="max-width:720px; width:100%">
            <div class="mb-4 text-center">
                <h2 class="acme">Alterar Usuário</h2>
            </div>

            <form asp-controller="User" asp-action="EditAction" method="post">
                <input type="hidden" asp-for="user_id" />

                <div class="mb-3">
                    <label asp-for="username" class="form-label">Login</label>
                    <input asp-for="username" class="form-control" placeholder="Digite o nome do Usuário" />
                    @Html.ValidationMessageFor(x => x.username)
                </div>

                <div class="mb-3">
                    <label asp-for="email" class="form-label">E-mail</label>
                    <input asp-for="email" class="form-control" placeholder="Digite o email do Usuário" />
                    @Html.ValidationMessageFor(x => x.email)
                </div>

                <div class="mb-3">
                    <label asp-for="password" class="form-label">Senha</label>
                    <input asp-for="password" class="form-control" placeholder="Digite a senha do Usuário" />
                    @Html.ValidationMessageFor(x => x.password)
                </div>

                <div class="mb-4">
                    <label asp-for="confirm_password" class="form-label">Confirmar senha</label>
                    <input asp-for="confirm_password" class="form-control" placeholder="Confirme a senha" />
                    @Html.ValidationMessageFor(x => x.confirm_password)
                </div>

                <div class="d-flex align-items-center gap-2">
                    <button type="submit" class="btn btn-outline-primary">Editar</button>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}