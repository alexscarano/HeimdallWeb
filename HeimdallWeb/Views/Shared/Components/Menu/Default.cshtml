                        {
                            <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="DashboardAdmin">Dashboard</a>
                            }
                        <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Edit">Alterar Usuário</a>
                        <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Delete">Excluir Usuário</a>
                    </div>
                </div>

                <div class="nav-item">
                    <a class="nav-link" role="button" asp-controller="Login" asp-action="Logout">Sair</a>
                </div>
            }
            else {
                <div class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                </div>

                <div class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="User" asp-action="Register">Cadastro</a>
                </div>
            }
        </div>
    </div>
