<nav class="navbar navbar-expand-md" data-bs-theme="dark">    <div class="container">        <a class="navbar-brand" asp-controller="Home" asp-action="Index">            <img src="~/images/HeimdallWeb_logo.png" alt="Logo" width="260">        </a>        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-main" aria-controls="nav-main" aria-expanded="false" aria-label="Menu Mobile">            <span class="navbar-toggler-icon"></span>        </button>        <div class="fs-5 navbar-nav nav-underline collapse navbar-collapse justify-content-lg-evenly justify-content-md-end mt-3 mt-md-0 gap-md-2" id="nav-main">            <div class="nav-item">                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Escanear</a>            </div>            <div class="nav-item">                <a class="nav-link" href="#">Sobre Nós</a>            </div>                        @if (Model.isAuthenticated)             {                <div class="nav-item dropdown">                <a href="#" role="button" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Perfil</a>                    <div class="dropdown-menu">                        <a class="dropdown-item" asp-area="" asp-controller="History" asp-action="Index">Histórico</a>                        @if (User.IsInRole("2"))                        {                            <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="DashboardAdmin">Dashboard</a>                        }                        <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Edit">Alterar Usuário</a>                        <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Delete">Excluir Usuário</a>                    </div>                </div>                <div class="nav-item">                    <a class="nav-link" role="button" asp-controller="Login" asp-action="Logout">Sair</a>                </div>            }            else {                <div class="nav-item">                    <a class="nav-link" href="#login" role="button" data-bs-toggle="modal" data-bs-target="#login">Login</a>                                        <div class="modal fade" id="login">                        <div class="modal-dialog text-white-50">                            <div class="modal-content">                                <div class="modal-header">                                    <h2>Login</h2>                                    <button type="button" class="btn-close" data-bs-dismiss="modal" data-bs-target="#login"></button>                                </div>                                <div class="modal-body">                                    <div class="container">                                        <form class="login" asp-action="Enter" asp-controller="Login" method="post">                                            <div class="justify-content-center align-items-center">                                                <div class="p-4">                                                    <div class="mb-3">                                                    <label for="emailOrLogin" class="form-label roboto">                                                        <i class="fa-solid fa-user"></i> Email ou Usuário                                                    </label>                                                    <input type="text" class="form-control" id="emailOrLogin" name="emailOrLogin" placeholder="Digite seu email ou nome de usuário" required>                                                    </div>                                                    <div class="mb-5">                                                    <label for="password" class="form-label roboto">                                                        <i class="fa-solid fa-lock"></i> Senha        