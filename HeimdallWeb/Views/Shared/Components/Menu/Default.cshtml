@model HeimdallWeb.DTO.MenuViewDTO

<nav class="navbar navbar-expand-md bg-dark" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="ms-3 navbar-brand" asp-controller="Home" asp-action="Index">
            <img src="~/images/HeimdallWeb_logo.png" alt="Logo" width="260">
        </a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-main" aria-controls="nav-main" aria-expanded="false" aria-label="Menu Mobile">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="fs-5 navbar-nav nav-underline collapse navbar-collapse justify-content-lg-evenly justify-content-md-end mt-3 mt-md-0 gap-md-2" id="nav-main">
            <div class="nav-item">
                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Analisar</a>
            </div>

            <div class="nav-item">
                <a class="nav-link" href="#">Sobre Nós</a>
            </div>
            
            @if (Model.isAuthenticated) {
                <div class="nav-item dropdown">
                <a href="#" role="button" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Perfil</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-area="" asp-controller="History" asp-action="Index">Histórico</a>
