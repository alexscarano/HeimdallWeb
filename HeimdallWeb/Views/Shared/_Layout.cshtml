<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Heimdall Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HeimdallWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Acme&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <style>
        body {
            background-color: 	#fff0db;
            background-image: url('/images/skulls.png');
        }
    </style>

    @await Component.InvokeAsync("Menu")

    @RenderBody()

    <footer class="navbar fixed-bottom bg-dark" data-bs-theme="dark">
        <div class="ms-3 nav container-fluid d-flex flex-wrap justify-content-between py-lg-1 my-lg-1 my-0 py-0">
            <div class="navbar-text col-md-4 d-flex align-items-center">
                <span class="fs-5">&copy; @DateTime.Now.Year - HeimdallWeb</span>
            </div>
            <div class="nav-item col-md-4 gap-2 justify-content-end d-flex align-items-center">
                <a class="nav-link" href="http://"><i class="bi bi-envelope-at fa-2xl"></i></a>
                <a class="nav-link" href="http://"><i class="bi bi-whatsapp fa-2xl"></i></a>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>