@model HeimdallWeb.Models.Map.PaginatedResult<HeimdallWeb.Models.HistoryModel>


@{
    ViewData["Title"] = "Histórico";
}

@{
    // capturar id do usuário
    var userIdValue = string.Empty;

    if (Model is not null && string.IsNullOrEmpty(userIdValue))
        userIdValue = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
}

<head>
    <link rel="stylesheet" href="~/css/history-dark.css" asp-append-version="true" />
</head>

@* TempData handled globally in _Layout.cshtml *@

<input type="hidden" id="userId" name="userId" value="@userIdValue" />

<div class="container mt-3">
    <div class="shadow-sm rounded p-2 bg-dark">
        <table class="table table-hover table-dark mb-0">
            @if (Model != null && Model.Items.Any())
            {
                <thead class="table-dark">
                    <tr class="text-center align-middle">
                        <th scope="col">Site</th>
                        <th scope="col">Achados</th>
                        <th scope="col">Tecnologias</th>
                        <th scope="col">Ações</th>
                        <th scope="col">Duração do Scan</th>
                        <th scope="col">Data de criação</th>
                    </tr>
                </thead>
            }
            else
            {
                <tbody class="alert">
                    <tr>
                        <td>Nenhum registro encontrado no histórico.</td>
                    </tr>
                </tbody>
            }
            <tbody class="table-group-divider">
            @if (Model != null && Model.Items.Any())
            {
                @foreach (var history in Model.Items)
                {
                    <tr class="text-center align-middle">
                        <td hidden id="row-@history.history_id">@history.history_id</td>
                        <td class="text-start text-light">@history.target</td>
                        <td>
                            <a class="btn btn-outline-primary btn-sm" href="javascript:void(0);" onclick="loadFindings(@history.history_id)">Ver achados</a>
                        </td>
                        <td>
                            <a class="btn btn-outline-primary btn-sm" href="javascript:void(0);" onclick="loadTechnologies(@history.history_id)">Ver tecnologias</a>
                        </td>
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Acoes">
                                <a class="btn btn-sm btn-outline-success" asp-controller="History" asp-action="ViewJson" asp-route-id="@history.history_id">JSON</a>
                                <button type="button" class="btn btn-sm btn-outline-primary" onclick="showSummary('@history.summary?.Replace("'", "\\'")')">Resumo</button>
                                <button type="button" class="btn btn-sm btn-outline-warning" onclick="exportSinglePdf(@history.history_id)" title="Exportar PDF deste site"><i class="fa-solid fa-file-export"></i></button>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete(@history.history_id)">Excluir</button>
                            </div>
                        </td>
                        <td class="text-light">@(history.duration.HasValue ? history.duration.Value.ToString(@"mm\:ss") : string.Empty)</td>
                        <td class="text-light">@history.created_date.ToString("g")</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="findingsModal" tabindex="-1" aria-labelledby="findingsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Categoria</th>
                                <th>Descrição</th>
                                <th>Risco</th>
                                <th>Recomendação</th>
                            </tr>
                        </thead>
                        <tbody id="findingsTableBody">
                            <!-- Vai ser preenchido via JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="technologiesModal" tabindex="-1" aria-labelledby="technologiesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Tecnologia</th>
                                <th>Versão</th>
                                <th>Categoria</th>
                                <th>Descrição</th>
                            </tr>
                        </thead>
                        <tbody id="technologiesTableBody">
                            <!-- Preenchido via JS -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @* Paginação *@
    @if (Model.TotalPages > 1)
    {
        
            int maxPagesToShow = 10;
            int startPage = Math.Max(1, Model.Page - maxPagesToShow / 2);
            int endPage = startPage + maxPagesToShow - 1;
            if (endPage > Model.TotalPages)
            {
                endPage = Model.TotalPages;
                startPage = Math.Max(1, endPage - maxPagesToShow + 1);
            }

        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @if (Model.HasPrevious)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.Page - 1)&pageSize=@Model.PageSize">Anterior</a>
                    </li>
                }

                @* show first and leading ellipsis if needed *@
                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1&pageSize=@Model.PageSize">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" href="?page=@i&pageSize=@Model.PageSize">@i</a>
                    </li>
                }

                @* trailing ellipsis and last page if needed *@
                @if (endPage < Model.TotalPages)
                {
                    if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="?page=@Model.TotalPages&pageSize=@Model.PageSize">@Model.TotalPages</a>
                    </li>
                }

                @if (Model.HasNext)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.Page + 1)&pageSize=@Model.PageSize">Próxima</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="~/js/history.js" asp-append-version="true"></script>
}